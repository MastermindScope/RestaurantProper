@model IEnumerable<RestaurantLibDB.Buchung>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Neue Buchung", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Buchungsnummmer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Personen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Essenszeit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GebuchtVon.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InFiliale.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Buchungsnummmer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Personen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Essenszeit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GebuchtVon.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InFiliale.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |

            @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
            
            @Html.ActionLink("Gericht hinzufügen", "AddGericht", new { id=item.Id }) |
            @Html.ActionLink("Gericht entfernen", "RemoveGericht", new {id=item.Id})
        </td>
    </tr>
}

</table>
